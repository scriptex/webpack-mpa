{
	"extends": [
		"stylelint-config-recommended"
	],
	"plugins": [
		"stylelint-no-unsupported-browser-features"
	],
	"rules": {
		"at-rule-no-unknown": [
			true,
			{
				"ignoreAtRules": [
					"function",
					"if",
					"each",
					"include",
					"mixin",
					"for",
					"while",
					"else",
					"return"
				]
			}
		]
	}
}
